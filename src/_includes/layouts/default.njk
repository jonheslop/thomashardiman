      <meta property="og:video:secure_url" content="https://player.vimeo.com/video/{{vimeoID}}?autoplay=1">
      <meta property="og:video:type" content="text/html">
      <meta property="twitter:player" content="https://player.vimeo.com/video/{{vimeoID}}?autoplay=1">
    {% endif -%}
